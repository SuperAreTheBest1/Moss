local Players = game:GetService("Players")
local ball = workspace:WaitForChild("Ball", 5) -- تأكد من أن الكرة موجودة قبل المتابعة

if not ball then
    return
end

local function onHeadHit(hit)
    local player = Players:GetPlayerFromCharacter(hit.Parent)
    if player then
        local ballVelocity = ball:FindFirstChildOfClass("BodyVelocity")
        if not ballVelocity then
            ballVelocity = Instance.new("BodyVelocity")
            ballVelocity.Parent = ball
        end

        -- تعزيز الضربة بشكل أكبر
        ballVelocity.Velocity = Vector3.new(math.random(-100, 100), 120, math.random(100, 150)) -- تعديل السرعة بشكل عشوائي
        ballVelocity.MaxForce = Vector3.new(800000, 800000, 800000) -- زيادة القوة بشكل كبير

        task.delay(0.2, function()
            ballVelocity.Velocity = Vector3.new(math.random(-80, 80), 70, math.random(60, 100)) -- تعديل السرعة بعد 0.2 ثانية
            ballVelocity.MaxForce = Vector3.new(500000, 500000, 500000) -- تقليل القوة قليلاً بعد التعديل
        end)
    end
end

ball.Touched:Connect(function(hit)
    if hit and hit.Name == "Head" then
        onHeadHit(hit)
    end
end)

-- TPS Street Soccer ULTIMATE GOD MODE Goalkeeper Script
-- يجعل الحارس غير قابل للتجاوز، مع تأثير صد قوي يمنع الكرة من دفعه

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local ball = workspace:WaitForChild("Ball")
local runService = game:GetService("RunService")
local physicsService = game:GetService("PhysicsService")

local reactionSpeed = 0 -- تصدي فوري بدون أي تأخير
local reflectPower = 500 -- زيادة قوة الصد للكرة (أكثر قوة)
local saveDistance = 10 -- المسافة التي تؤثر فيها الصد (متر)

local function instaSave()
    if ball and humanoidRootPart then
        local distance = (ball.Position - humanoidRootPart.Position).magnitude
        if distance <= saveDistance then -- إذا كانت الكرة ضمن المسافة المحددة
            local direction = (ball.Position - humanoidRootPart.Position).unit
            ball.Velocity = direction * -reflectPower -- يعكس اتجاه الكرة بقوة
            ball.AssemblyLinearVelocity = direction * -reflectPower -- يمنع دفع الحارس
            ball.Velocity = ball.Velocity * 2 -- زيادة سرعة الكرة المعكوسة بشكل أكبر
        end
    end
end

runService.Heartbeat:Connect(function()
    if ball and ball.Velocity.magnitude > 0 then -- يصد أي حركة للكرة
        instaSave()
    end
end)
